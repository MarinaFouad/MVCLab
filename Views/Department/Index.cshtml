@model IEnumerable<Department>
@{
    Layout = "View";
}
<a asp-action="Add" asp-controller="Department" class=" btn btn-danger">Create New Department</a>
    <table class="table">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">No Department to show</td> 
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td> <a asp-action="Details" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-danger"> Details </a></td>
                    <td>
                        <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-danger"> Delete </a>
                        <a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-danger"> Edit </a>

                    </td>
                </tr>
            }

        }
    </table>
